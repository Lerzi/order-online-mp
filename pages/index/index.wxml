<!--index.wxml-->
<view class="container">
  <view class="relative w-full flex justify-center">
    <swiper class="w-full h-6xl" autoplay="true">
      <block wx:for="{{ background }}" wx:key="*this">
        <swiper-item>
          <view
            class="bg-teal-500 h-full w-full text-white flex justify-center items-center"
          >
            {{ item }}
          </view>
        </swiper-item>
      </block>
    </swiper>
    <view
      class="w-96vw absolute h-120 bottom--40 backdrop-blur-md bg-white_50 shadow-lg rounded-md"
    >
    </view>
  </view>
</view>
